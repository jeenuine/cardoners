<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF9933"
    tools:context="e.user.cardoners.Agree2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_agree1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="20dp"
            android:text="서비스 이용 동의"
            android:textSize="15dp"
            android:textColor="#FFFFFF"
            tools:layout_editor_absoluteX="113dp"
            tools:layout_editor_absoluteY="46dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_agree2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="130dp"
                android:text="모두 확인, 동의합니다"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="113dp"
                tools:layout_editor_absoluteY="46dp" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FFFFFF"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_agree3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="50dp"
            android:text="원활한 서비스 이용을 위해 필수 항목 동의가 필요합니다"
            android:textColor="#FFFFFF"
            android:textSize="10dp"
            tools:layout_editor_absoluteX="113dp"
            tools:layout_editor_absoluteY="46dp" />


        <TableLayout
            android:layout_width="340dp"
            android:layout_height="240dp"
            android:paddingLeft="10dp"
            android:background="@drawable/button_shape"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="92dp">

            <TableRow
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/text_agree4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="125dp"
                    android:text="서비스 이용약관 동의(필수)"
                    android:textColor="#FFFFFF"
                    tools:layout_editor_absoluteX="113dp"
                    tools:layout_editor_absoluteY="46dp" />

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#FFFFFF"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/text_agree5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="위치기반 서비스 이용약관 동의(필수)"
                    android:textColor="#FFFFFF"
                    tools:layout_editor_absoluteX="113dp"
                    tools:layout_editor_absoluteY="46dp" />

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#FFFFFF"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/text_agree6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="개인정보 수집 동의(필수)"
                    android:textColor="#FFFFFF"
                    tools:layout_editor_absoluteX="113dp"
                    tools:layout_editor_absoluteY="46dp" />

                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#FFFFFF"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/text_agree7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="개인정보 제 3자 제공 동의(필수)"
                    android:textColor="#FFFFFF"
                    tools:layout_editor_absoluteX="113dp"
                    tools:layout_editor_absoluteY="46dp" />

                <CheckBox
                    android:id="@+id/checkBox5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#FFFFFF"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/text_agree8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="마케팅 광고 전체 수신 동의(선택)"
                    android:textColor="#FFFFFF"
                    tools:layout_editor_absoluteX="113dp"
                    tools:layout_editor_absoluteY="46dp" />

                <CheckBox
                    android:id="@+id/checkBox6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#FFFFFF"
                    android:layout_weight="1" />
            </TableRow>


        </TableLayout>

        <Button
            android:id="@+id/service_next2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="280dp"
            android:background="@android:color/white"
            android:text="동의하고 계속 진행합니다"
            android:textColor="#FF9933"
            tools:layout_editor_absoluteX="127dp"
            tools:layout_editor_absoluteY="455dp" />


    </LinearLayout>



</android.support.constraint.ConstraintLayout>